// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  name String
  lastName String @map("last_name")
  email String  @unique()
  password String
  status Status @default(ACTIVE)
  role Role @default(BASIC)
  deleted DateTime?
  created DateTime @default(now())

  wallets Wallets[]
  @@map("users")
}

model Wallets {
  id Int @id @default(autoincrement())
  name String
  description String
  created DateTime @default(now())

  user_id Int
  user Users @relation(fields: [user_id], references: [id])

  transactions Transactions[]
  @@map("wallets")
}

model Types {
  id Int @id @default(autoincrement())
  name String

  transactions Transactions[]
  @@map("types")
}

model Transactions {
  id Int @id @default(autoincrement())
  name String
  abbreviation String
  quantity Int
  price Decimal @db.Money

  type_id Int
  type Types @relation(fields: [type_id], references: [id])

  wallet_id Int
  wallet Wallets @relation(fields: [wallet_id], references: [id])
  @@map("transactions")
}

enum Role {
  BASIC
  PREMIUM
}

enum Status {
  ACTIVE
  INACTIVE
}
